<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Maintain">

    <Button
        android:id="@+id/Quit"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="50dp"
        android:text="Quit"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/State"
        android:layout_width="600dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="352dp"
        android:layout_marginRight="352dp"
        android:layout_marginBottom="571dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="455dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="94dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sensor"
            android:layout_width="300dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/sensor" />

        <Button
            android:id="@+id/color_sensor"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="颜色传感器" />

        <Button
            android:id="@+id/distance_sensor"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="距离传感器" />

        <Button
            android:id="@+id/id_sensor"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="身份识别" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="455dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="304dp"
        android:layout_marginRight="304dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/motor"
            android:layout_width="300dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/motor" />

        <Button
            android:id="@+id/btn_motor1"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="电机维护1" />

        <Button
            android:id="@+id/btn_motor2"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="电机维护2" />

    </LinearLayout>

</RelativeLayout>